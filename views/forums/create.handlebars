<form action="/forums" method="post">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">
            Title
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" required />
        </div>
    </div>
    
    <div class="form-group">
        <label for="content" class="col-sm-2 control-label">
            Content
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="content" name="content" placeholder="Content" required />
        </div>
    </div>
    <div class="form-group">
        <label for="label" class="col-sm-2 control-label">
            label
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="label" name="label" placeholder="label" />
        </div>
    </div>
    <div class="form-group">
        <label for="clothing" class="col-sm-2 control-label">
            clothing
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="clothing" name="clothing" placeholder="clothing" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create New Forum</button>
        </div>
    </div>
</form>