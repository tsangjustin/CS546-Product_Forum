<section>
    <article>
        <i class="fa fa-search" aria-hidden="true"></i>
        <input id="searchBox" type="text" placeholder="Search by tag, title, brand" />
    </article>
    <ol id="community-forums" class="list-group">
    {{#each forums}}
        <li class="list-group-item">
            <p>
                {{ this.createdOn }}
            </p>
            <a href="forums/{{this._id}}">
                {{ this.title }}
            </a>
        </li>
    {{/each}}
    </ol>
</section>
<script src="/public/js/communityForums.js"></script>
